<div class="is-flex is-justify-content-end">
  <div class="buttons">
    <%= link_to "Add Food", new_food_path %>
  </div>
</div>
<div class="table-container">
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <th><%= food.name %></th>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= link_to 'Delete', food, method: :delete, data: { confirm: 'Are you sure you want to delete this food?' }%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>